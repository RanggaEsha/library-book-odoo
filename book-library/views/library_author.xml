<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
      
      <record id="library_author_action" model="ir.actions.act_window">
          <field name="name">Libray author</field>
          <field name="res_model">library.author</field>
          <field name="view_mode">tree,form</field>
      </record>
      <record id="libray_author_form" model="ir.ui.view">
          <field name="name">library.author.form</field>
          <field name="model">library.author</field>
          <field name="arch" type="xml">
              <form>
                  <group>
                      <field name="name"/>
                      <field name="total_books"/>
                  </group>
              </form>
          </field>
      </record>
      <record id="library_author_tree" model="ir.ui.view">
          <field name="name">library.author.tree</field>
          <field name="model">library.author</field>
          <field name="arch" type="xml">
              <tree>
                  <field name="name"/>
                  <field name="total_books"/>
              </tree>
          </field>
      </record>
  </data>
</odoo>